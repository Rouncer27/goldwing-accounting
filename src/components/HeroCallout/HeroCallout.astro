---
import { Image } from "astro:assets";
import Button from "../shared/Button.astro";
import Headline from "../shared/Headline.astro";
import Wrapper from "../shared/Wrapper.astro";
import "./heroCallout.scss";

const { title, content, buttonText, buttonLink, image } = Astro.props.data;

const heroImageSrc = image?.node?.sourceUrl;
const heroAlt = image?.node?.altText || "";
---

<section class="hero-callout">
  <div class="hero-callout-content">
    <div class="hero-callout-content-title">
      <Headline ele="h2" hlstyle="two">{title}</Headline>
    </div>
    <div class="hero-callout-content-main" set:html={content} />
    <div>
      <Button ele="a" btnstyle="two" href={buttonLink.edges[0].node.uri}>
        {buttonText}
      </Button>
    </div>
  </div>

  <div class="hero-callout-backgroundimage">
    <Image
      src={heroImageSrc}
      alt={heroAlt}
      format="webp"
      widths={[800, 1200, 1600, 2000]}
      sizes="100vw"
      loading="eager"
      inferSize={true}
      class="hero-callout-backgroundimage-img"
    />
  </div>
</section>
