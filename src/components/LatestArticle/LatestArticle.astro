---
import { Image } from "astro:assets";
import Wrapper from "../shared/Wrapper.astro";
import "./latestArticle.scss";
import Button from "../shared/Button.astro";
import Headline from "../shared/Headline.astro";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
        query postsQuery {
            posts(first: 1) {
                nodes {
                    uri
                    slug
                    title
                    postFields {
                        excerpt
                        featuredImage  {
                            node {
                                sourceUrl
                                altText
                                mediaDetails {
                                    width
                                    height
                                }
                            }
                        }      
                    }
                }   
            }
        }
        `,
  }),
});

const { data } = await response.json();
const post = data.posts.nodes[0];

const featuredImageSrc = post.postFields.featuredImage?.node?.sourceUrl;
const featuredImageAlt = post.postFields.featuredImage?.node?.altText || "";
---

<div class="latest-news">
  <Wrapper>
    <div class="latest-news-image">
      <Image
        src={featuredImageSrc}
        alt={featuredImageAlt}
        format="webp"
        widths={[800, 1200, 1600, 2000]}
        sizes="100vw"
        loading="eager"
        inferSize={true}
      />
    </div>
    <div class="latest-news-content">
      <div class="latest-news-content-banner">
        <Headline ele="h2" hlstyle="three">News + Resources</Headline>
      </div>
      <div class="latest-news-content-title">
        <Headline ele="h3" hlstyle="four">{post.title}</Headline>
      </div>
      <div
        class="latest-news-content-excerpt"
        set:html={post.postFields.excerpt}
      />
      <div class="latest-news-content-link">
        <Button ele="a" btnstyle="two" href={`/news-resources/${post.slug}`}
          >Read More</Button
        >
      </div>
    </div>
  </Wrapper>
</div>
