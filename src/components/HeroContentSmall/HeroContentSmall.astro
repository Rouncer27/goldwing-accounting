---
import Headline from "../shared/Headline.astro";
import "./heroContentSmall.scss";
import { Image } from "astro:assets";
const { title, image, content } = Astro.props.data;

const heroImageSrc = image?.node?.sourceUrl;
const heroAlt = image?.node?.altText || "";
---

<div class="hero-content-small">
  <div class="hero-content-small-main">
    <div class="hero-content-small-main-title">
      <Headline ele="h2" hlstyle="two">{title}</Headline>
    </div>
    <div class="hero-content-small-main-content" set:html={content} />
  </div>
  <div class="hero-content-small-background">
    <Image
      src={heroImageSrc}
      alt={heroAlt}
      format="webp"
      widths={[800, 1200, 1600, 2000]}
      sizes="100vw"
      loading="eager"
      inferSize={true}
      class="hero-content-small-background-img"
    />
  </div>
</div>
