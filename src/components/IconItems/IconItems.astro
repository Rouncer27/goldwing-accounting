---
// @ts-nocheck
import { Image } from "astro:assets";
import Wrapper from "../shared/Wrapper.astro";
import "./iconItems.scss";
import Headline from "../shared/Headline.astro";

const { intro, items } = Astro.props.data;
---

<div class="icon-items">
  <Wrapper>
    <div class="icon-items-intro">
      <div set:html={intro} />
    </div>
    <div class="icon-items-list">
      {
        items.map((item) => {
          const iconImageSrc = item.icon?.node?.sourceUrl;
          const iconImageAlt = item.icon?.node?.altText || item.title;
          return (
            <div class="icon-items-item">
              <div class="icon-items-item-icon">
                <div class="icon-items-item-icon-container">
                  <Image
                    src={iconImageSrc}
                    alt={iconImageAlt}
                    format="webp"
                    widths={[800, 1200, 1600, 2000]}
                    sizes="100vw"
                    loading="eager"
                    inferSize={true}
                  />
                </div>
              </div>
              <div class="icon-items-item-content">
                <div class="icon-items-item-content-title">
                  <Headline ele="h2" hlstyle="three">
                    {item.title}
                  </Headline>
                </div>
                <div
                  class="icon-items-item-content-paragraph"
                  set:html={item.content}
                />
              </div>
            </div>
          );
        })
      }
    </div>
  </Wrapper>
</div>
