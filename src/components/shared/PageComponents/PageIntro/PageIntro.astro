---
import Wrapper from "../../Wrapper.astro";
import { Image, Picture } from "astro:assets";
import "./pageIntro.scss";

import backgroundImage from "../../../../assets/intro-background.png";
import Headline from "../../Headline.astro";

const { data } = Astro.props;
---

<div class="page-intro">
  <Wrapper classes="page-intro-wrapper">
    <div class="page-intro-icon">
      <Picture
        src={data.icon.node.sourceUrl}
        alt={data.icon.node.altText}
        width={data.icon.node.mediaDetails.width}
        height={data.icon.node.mediaDetails.height}
        formats={["avif", "webp"]}
      />
    </div>
    <div class="page-intro-content">
      <Headline ele="h1" hlstyle="four">{data.topTitle}</Headline>
      <Headline ele="h2" hlstyle="one">{data.title}</Headline>
      <div set:html={data.content} />
    </div>
  </Wrapper>
  <div class="page-intro-background">
    <Image
      src={backgroundImage}
      alt="backround graphic"
      width={4098}
      height={1140}
    />
  </div>
</div>
