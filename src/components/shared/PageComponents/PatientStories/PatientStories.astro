---
import Headline from "../../../shared/Headline.astro";
import Wrapper from "../../../shared/Wrapper.astro";
import Wysiwyg from "../../Wysiwyg.astro";
import "./patientStories.scss";

const { data } = Astro.props;
---

<div class="patient-stories">
  <Wrapper classes="patient-stories-wrapper">
    <div class="patient-stories-title">
      <Headline ele="h2" hlstyle="two">{data.title}</Headline>
    </div>
    <div class="patient-stories-video">
      <div class="patient-stories-video-embed" set:html={data.videoEmbed} />
    </div>
    <div class="patient-stories-content">
      <Wysiwyg>
        <div set:html={data.content} />
      </Wysiwyg>
    </div>
  </Wrapper>
</div>
