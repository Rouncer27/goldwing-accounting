---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero/PageHero.astro";
import Steps from "../components/Steps/Steps.astro";
import BookConsultation from "../components/BookConsultation/BookConsultation.astro";
import HeroContentSmall from "../components/HeroContentSmall/HeroContentSmall.astro";

import { Page_Seo_Query } from "../data/page/queries";
import { Page_Hero_Query, Steps_Query } from "../data/shared/queries";
import { Hero_Content_Small_Query } from "../data/contact/queries";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
		query homePageQuery {
			page(id: "/contact", idType: URI) {
				${Page_Seo_Query}
        contactPage {
          ${Page_Hero_Query}
          ${Steps_Query}
          ${Hero_Content_Small_Query}
        }
			}
		}
	`,
  }),
});

const {
  data: {
    page: { seoMetaTags, contactPage },
  },
} = await response.json();
---

<Layout
  metaImg={seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={seoMetaTags.seoMetaInformation.metaDescription}
>
  <PageHero data={contactPage.pageHero} />
  <Steps data={contactPage.steps} />
  <BookConsultation />
  <HeroContentSmall data={contactPage.heroContentSmall} />
</Layout>
