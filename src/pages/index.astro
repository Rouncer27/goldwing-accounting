---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero/PageHero.astro";
import HeroContent from "../components/HeroContent/HeroContent.astro";
import Services from "../components/Services/Services.astro";
import LatestArticle from "../components/LatestArticle/LatestArticle.astro";

import { Page_Seo_Query } from "../data/page/queries";
import { Page_Hero_Query } from "../data/shared/queries";
import {
  Hero_Content_Query,
  Services_Query,
  Latest_Article_Query,
} from "../data/home/queries";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
		query homePageQuery {
			page(id: "/", idType: URI) {
				${Page_Seo_Query}
        homePage {
          ${Page_Hero_Query}
          ${Hero_Content_Query}
          ${Services_Query}
          ${Latest_Article_Query}
        }
			}
		}
	`,
  }),
});

const {
  data: {
    page: { seoMetaTags, homePage },
  },
} = await response.json();
---

<Layout
  metaImg={seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={seoMetaTags.seoMetaInformation.metaDescription}
>
  <PageHero data={homePage.pageHero} />
  <HeroContent data={homePage.heroContent} />
  <Services data={homePage.services} />
  {homePage.latestArticle.displayLatestArticle ? <LatestArticle /> : null}
</Layout>
