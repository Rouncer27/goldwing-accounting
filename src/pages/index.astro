---
import Headline from "../components/shared/Headline.astro";
import Wrapper from "../components/shared/Wrapper.astro";
import Layout from "../layouts/Layout.astro";

import { Page_Seo_Query } from "../data/page/queries";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
		query homePageQuery {
			page(id: "/", idType: URI) {
				${Page_Seo_Query}
			}
		}
	`,
  }),
});

const {
  data: {
    page: { seoMetaTags },
  },
} = await response.json();
---

<Layout
  metaImg={seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={seoMetaTags.seoMetaInformation.metaDescription}
>
  <Wrapper>
    <div>
      <Headline ele="h1" hlstyle="one">Home Page</Headline>
    </div>
  </Wrapper>
</Layout>
