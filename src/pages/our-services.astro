---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero/PageHero.astro";
import IconItems from "../components/IconItems/IconItems.astro";
import Steps from "../components/Steps/Steps.astro";
import Testimonials from "../components/Testimonials/Testimonials.astro";
import LatestArticle from "../components/LatestArticle/LatestArticle.astro";

import { Page_Seo_Query } from "../data/page/queries";
import { Page_Hero_Query, Latest_Article_Query } from "../data/shared/queries";
import {
  Icon_Items_Query,
  Steps_Query,
  Testimonials_Query,
} from "../data/ourServices/queries";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
		query servicesPageQuery {
			page(id: "/our-services", idType: URI) {
				${Page_Seo_Query}
        servicesPage {
          ${Page_Hero_Query}
          ${Icon_Items_Query}
          ${Steps_Query}
          ${Testimonials_Query}
          ${Latest_Article_Query}
        }
			}
		}
	`,
  }),
});

const {
  data: {
    page: { seoMetaTags, servicesPage },
  },
} = await response.json();
---

<Layout
  metaImg={seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={seoMetaTags.seoMetaInformation.metaDescription}
>
  <PageHero data={servicesPage.pageHero} />
  <IconItems data={servicesPage.iconItems} />
  <Steps data={servicesPage.steps} />
  {servicesPage.testimonials.displayTestimonials ? <Testimonials /> : null}
  {servicesPage.latestArticle.displayLatestArticle ? <LatestArticle /> : null}
</Layout>
