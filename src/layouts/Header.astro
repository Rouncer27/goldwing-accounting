---
import MainNav from "../components/Navigation/MainNav/MainNav";
import { Header_Menu_Query } from "../data/header/queries";

const response = await fetch(`${import.meta.env.PUBLIC_WP_URL}/graphql`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
        query headerQuery {
          ${Header_Menu_Query}
        }
    `,
  }),
});
const {
  data: {
    menuTop: { menuItems: menuTopMenuItems },
  },
} = await response.json();
---

<div>
  <div>
    <MainNav
      client:only="react"
      menuItems={menuTopMenuItems.nodes}
      pathname={Astro.url.pathname}
    />
  </div>
</div>
